<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.android.jolyxie.customtest1.MainActivity"
    xmlns:CustomView="http://schemas.android.com/apk/res-auto"
    xmlns:CustomImageView="http://schemas.android.com/apk/res-auto"
    xmlns:CustomProgressBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.jolyxie.customtest1.CustomView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerInParent="true"
        CustomView:TitleTextColor="@color/red"
        CustomView:TitleTextSize="22sp"
        CustomView:TitleText="@string/title_text"/>

    <com.android.jolyxie.customtest1.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        CustomImageView:image="@mipmap/ic_launcher"
        CustomImageView:imageScaleType="center"
        CustomImageView:textColor="@color/black"
        CustomImageView:textSize="22sp"
        CustomImageView:titleTextImage="@string/title_text"/>

    <com.android.jolyxie.customtest1.CustomProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="10dp"
        CustomProgressBar:firstColor="@color/red"
        CustomProgressBar:secondColor="@color/black"
        CustomProgressBar:circleWidth="15dp"
        CustomProgressBar:speed="20"/>

</RelativeLayout>
